<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="de.skymatic.app.PrimaryController" >
	<fx:define>
		<ToggleGroup fx:id="templateFileToggler"/>
	</fx:define>
	<padding>
		<Insets topRightBottomLeft="25"/>
	</padding>
	<children>
		<VBox alignment="BASELINE_LEFT" spacing="10.0">
			<Label alignment="BASELINE_LEFT" text="Choose financial report file:" labelFor="$csvFileChooserButton"/>
			<HBox alignment="CENTER" spacing="10.0">
				<TextField fx:id="pathOfCSVFile" text="${controller.csvPathString}" HBox.hgrow="ALWAYS"/>
				<Button fx:id="csvFileChooserButton" text="Choose..." onAction="#chooseCSVFile"/>
			</HBox>
		</VBox>
		<VBox spacing="10.0" disable="true">
			<HBox alignment="BASELINE_LEFT" spacing="10.0">
				<CheckBox fx:id="generateInvoiceNumbersCheckbox" />
				<Label text="Generate invoice numbers automatically" labelFor="$generateInvoiceNumbersCheckbox"/>
			</HBox>
			<VBox spacing="10.0" disable="${!generateInvoiceNumbersCheckbox.selected}">
				<HBox spacing="10.0" alignment="CENTER_LEFT">
					<padding>
						<Insets left="25"/>
					</padding>
					<Label text="Prefix:" labelFor="$invoicePrefixField"/>
					<TextField fx:id="invoicePrefixField" promptText="added to every invoice number" minWidth="200" maxWidth="400"/>
				</HBox>
				<HBox spacing="10.0" alignment="CENTER_LEFT">
					<padding>
						<Insets left="25"/>
					</padding>
					<Label text="First Number:" labelFor="$firstInvoiceNumberField"/>
					<TextField fx:id="firstInvoiceNumberField" promptText="to start the numbering from" minWidth="200" maxWidth="400"/>
				</HBox>
			</VBox>
		</VBox>
		<TableView fx:id="tableView" items="${controller.invoices}" maxHeight="200" maxWidth="400" editable="true">
			<columns>
				<TableColumn fx:id="columnInvoiceNumber" text="Invoice Number" editable="true"/>
				<TableColumn fx:id="columnSubsidiary" text="Subsidiary" editable="false"/>
				<TableColumn fx:id="columnAmount" text="Amount" editable="false"/>
				<TableColumn fx:id="columnProceeds" text="Proceeds" editable="false"/>
			</columns>
		</TableView>
		<VBox fx:id="templateVBox" alignment="BASELINE_LEFT" spacing="10.0">
			<Label text="Template file" labelFor="$templateVBox"/>
			<HBox spacing="10.0" alignment="CENTER_LEFT">
				<RadioButton fx:id="storedTemplateRadioButton" toggleGroup="${templateFileToggler}" text="Use stored template" visible="true" managed="true"/>
				<Button fx:id="replaceStoredTemplateButton" text="Replace..." onAction="#replaceStoredTemplate" />
			</HBox>
			<HBox spacing="10.0" alignment="CENTER_LEFT">
				<RadioButton fx:id="externalTemplateRadioButton" toggleGroup="${templateFileToggler}" text="Use external template" onAction="#chooseExternalTemplate"/>
				<TextField fx:id="pathOfTemplate" text="${controller.settings.externalTemplatePath}" HBox.hgrow="ALWAYS"/>
			</HBox>
		</VBox>
		<VBox alignment="BASELINE_LEFT" spacing="10.0">
			<Label alignment="BASELINE_LEFT" text="Choose output directory:"/>
			<HBox alignment="CENTER" spacing="10.0" >
				<TextField fx:id="pathOfOutputDirectory" text="${controller.settings.outputPath}" HBox.hgrow="ALWAYS"/>
				<Button fx:id="outputDirectoryChooserButton" text="Choose..." onAction="#chooseOutputDirectory"/>
			</HBox>
		</VBox>
		<HBox alignment="BASELINE_LEFT" spacing="10.0">
			<CheckBox fx:id="persistSettingsCheckBox"/>
			<Label alignment="BASELINE_LEFT" labelFor="$persistSettingsCheckBox" text="Save and overwrite settings, when generating output"/>
		</HBox>
		<ButtonBar buttonMinWidth="120" buttonOrder="X_I">
			<buttons>
				<Button text="Start parsing" ButtonBar.buttonData="NEXT_FORWARD" onAction="#parseFinancialReport" disable="${controller.isFileSelected}"/>
				<Button text="Generate invoices" ButtonBar.buttonData="FINISH" onAction="#generateInvoices" disable="${!controller.isReadyToGenerate}"/>
			</buttons>
		</ButtonBar>
	</children>
</VBox>
