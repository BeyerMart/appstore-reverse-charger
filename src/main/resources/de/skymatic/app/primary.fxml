<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="de.skymatic.app.PrimaryController">
	<children>
		<Label text="Primary View"/>
		<HBox alignment="CENTER" spacing="20.0">
			<TextField fx:id="pathOfInputFile" text="${controller.pathString}" HBox.hgrow="ALWAYS"/>
			<Button fx:id="fileChooserButton" text="Choose..." onAction="#chooseFile"/>
		</HBox>
		<Button fx:id="startParser" text="Start parsing" onAction="#startParsing"/>
		<TableView fx:id="tableView" items="${controller.invoices}">
			<columns>
				<TableColumn fx:id="columnSubsidiary" text="Subsidiary"/>
				<TableColumn fx:id="columnAmount" text="Amount"/>
				<TableColumn fx:id="columnProceeds" text="Proceeds"/>
			</columns>
		</TableView>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
	</padding>
</VBox>
